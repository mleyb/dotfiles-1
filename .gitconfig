[user]
	name = Daniel Mart√≠
	email = mvdan@mvdan.cc
	editor = vim
	signingkey = 4348041C
[color]
	ui = true
[core]
	askpass = /bin/true
[push]
	default = current
[filter "tabspace"]
	smudge = unexpand --tabs=4 --first-only
	clean = expand --tabs=4 --initial
[format]
	signoff = true
	signature =
[alias]
	ad = add
	adp = add -p
	ap = apply
	bs = bisect
	ba = branch -a
	br = branch
	ca = commit -a -v
	cle = clean -dffx
	clo = clone
	cm = commit -v
	co = checkout
	df = diff
	dfc = diff --cached
	dfm = diff master..
	dfo = diff ORIG_HEAD..
	dfs = diff --submodule
	dfu = diff @{u}..
	fe = fetch
	gr = grep
	lo = log
	loo = log ORIG_HEAD..
	lop = log -p
	lopo = log -p ORIG_HEAD..
	lou = log @{u}..
	ls = ls-files
	mr = merge
	pl = pull
	pla = pull --all
	plr = pull --rebase=preserve
	ps = push
	rb = rebase
	rbi = rebase -i
	rm = rm
	rmc = rm --cached
	rs = reset
	rsh = reset --hard
	rsp = reset -p
	rt = remote
	rv = revert
	s = status -sb -uno
	ss = status -sb
	sh = show
	sm = submodule
	smu = submodule update --init --recursive
	smf = submodule foreach --recursive
	st = stash
