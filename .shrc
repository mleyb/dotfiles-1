pgr () {
	ps aux | grep -v grep | grep "$@" -i --color=auto
}

fn () {
	if [[ $# > 1 ]]; then
		find $1 -name "*$2*"
	else
		find . -name "*$1*"
	fi
}

fni () {
	if [[ $# > 1 ]]; then
		find $1 -iname "*$2*"
	else
		find . -iname "*$1*"
	fi
}

alias udb="sudo updatedb"
lc () {
	[[ $# > 1 ]] && locate "$(readlink -f $1)/*$2*" ||\
	   	locate "$(readlink -f .)/*$1*"
}

lci () {
	[[ $# > 1 ]] && locate -i "$(readlink -f $1)/*$2*" ||\
	   	locate -i "$(readlink -f .)/*$1*"
}

