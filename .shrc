gplm() {
	if [[ $1 != */* ]]; then
		case $PWD in
			*/fd|*/fd/*)
				1=$1/fdroiddata;;
			*/fsr|*/fsr/*)
				1=$1/fdroidserver;;
			*/fcl|*/fcl/*)
				1=$1/fdroidclient;;
		esac
	fi
	git pull --no-ff https://gitlab.com/${1}.git ${2:-master}
}

