spr() {
	if [ -t 0 ]; then
		[ "$*" ] || return 1
		if [ -f "$*" ]; then
			echo "Uploading the file "$*"..." >&2
			cat "$*"
		else
			echo "Uploading the string \""$*"\"..." >&2
			echo "$*"
		fi | curl -F 'sprunge=<-' http://sprunge.us
	else
		echo "Uploading from stdin..." >&2
		curl -F 'sprunge=<-' http://sprunge.us
	fi
}

