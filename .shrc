lt () {
	if [[ $# > 0 ]]; then
		ls --color=always -Alhrt "$1" | tail -n 25
	else
		ls --color=always -Alhrt | tail -n 25
	fi
}

lt- () {
	if [[ $# > 0 ]]; then
		ls --color=always -Alhrt "$1" | head -n 25
	else
		ls --color=always -Alhrt | head -n 25
	fi
}

